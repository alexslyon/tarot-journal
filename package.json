{
  "name": "tarot-journal",
  "version": "1.0.0",
  "description": "A tarot journal desktop application",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development electron .",
    "build:frontend": "cd frontend && PATH=/opt/homebrew/opt/node@20/bin:$PATH npm run build",
    "start": "npm run build:frontend && electron .",
    "package": "npm run build:frontend && electron-forge package",
    "make": "npm run build:frontend && electron-forge make"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/maker-dmg": "^7.6.0"
  }
}
